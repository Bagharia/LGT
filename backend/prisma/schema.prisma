generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modèle pour les utilisateurs
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String   // Hash bcrypt
  firstName String?
  lastName  String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  designs   Design[]
  orders    Order[]

  @@map("users")
}

// Enum pour les rôles
enum Role {
  USER
  ADMIN
}

// Modèle pour les catégories de produits
model Category {
  id           Int       @id @default(autoincrement())
  name         String    @unique
  slug         String    @unique
  displayOrder Int       @default(0)
  hasTwoSides  Boolean   @default(true) // true = recto/verso (t-shirts), false = recto seul (posters)
  isActive     Boolean   @default(true)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  products     Product[]

  @@map("categories")
}

// Modèle pour les produits
model Product {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  description  String?
  basePrice    Float
  isActive     Boolean  @default(true)
  displayOrder Int      @default(0)
  categoryId   Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // URLs des mockups pour prévisualisation
  mockupFrontUrl String?
  mockupBackUrl  String?

  // Relations
  category   Category?  @relation(fields: [categoryId], references: [id])
  designs    Design[]
  orderItems OrderItem[]

  @@map("products")
}

// Modèle pour les designs créés par les utilisateurs
model Design {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  
  // Données JSON de Fabric.js pour chaque face
  frontDesignJson String  @db.Text // Canvas devant
  backDesignJson  String? @db.Text // Canvas dos (optionnel)
  
  // URLs des images de prévisualisation générées
  frontPreviewUrl String?
  backPreviewUrl  String?
  
  // Métadonnées
  name        String?  // Nom du design (optionnel)
  quantities  Json?    // Quantités par taille {XS: 1, S: 2, M: 1, ...}
  totalPrice  Float?   // Prix total avant réduction
  finalPrice  Float?   // Prix final après réduction
  tshirtColor String?  // Couleur du t-shirt (#FFFFFF, #000000, etc.)

  // Données poster (si le produit est un poster/cadre)
  posterImageUrl String? @db.Text  // Image uploadée en dataURL
  frameColor     String?           // Couleur du cadre (#000000, etc.)
  posterFormat   String?           // "A3" ou "A4"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  product      Product       @relation(fields: [productId], references: [id])
  orderItems   OrderItem[]
  orderDesigns OrderDesign[]

  @@map("designs")
}

// Modèle pour les commandes
model Order {
  id              Int         @id @default(autoincrement())
  userId          Int
  totalPrice      Float
  status          OrderStatus @default(PENDING)
  
  // Informations de livraison
  shippingAddress String
  shippingCity    String
  shippingZip     String
  shippingCountry String
  
  // Informations de paiement
  stripeSessionId String?     @unique
  
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  user         User          @relation(fields: [userId], references: [id])
  orderItems   OrderItem[]
  orderDesigns OrderDesign[]

  @@map("orders")
}

// Enum pour les statuts de commande
enum OrderStatus {
  PENDING    // En attente de paiement
  PAID       // Payée
  PROCESSING // En cours de traitement
  SHIPPED    // Expédiée
  DELIVERED  // Livrée
  CANCELLED  // Annulée
}

// Modèle pour la relation entre Order et Design avec quantités
model OrderDesign {
  id         Int      @id @default(autoincrement())
  orderId    Int
  designId   Int
  quantities Json     // Stocke les quantités par taille {XS: 1, S: 2, M: 1, ...}
  finalPrice Float    // Prix final pour ce design dans cette commande
  createdAt  DateTime @default(now())

  // Relations
  order  Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)
  design Design @relation(fields: [designId], references: [id])

  @@map("order_designs")
}

// Modèle pour les articles d'une commande
model OrderItem {
  id        Int    @id @default(autoincrement())
  orderId   Int
  designId  Int
  productId Int

  // Détails de l'article
  size      String // S, M, L, XL, XXL
  color     String // noir, blanc
  quantity  Int    @default(1)
  unitPrice Float  // Prix unitaire au moment de la commande

  createdAt DateTime @default(now())

  // Relations
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  design  Design  @relation(fields: [designId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}
